---
import { Icon } from '@astrojs/starlight/components';

/**
 * Hint component that mimics Starlight's Aside styling with blue/cyan colors.
 * 
 * @prop {string} title - The title text for the hint summary
 */
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details class="starlight-aside starlight-aside--hint sl-markdown-content my-6 group">
  <summary class="starlight-aside__title cursor-pointer flex items-center gap-2">
    <Icon name="puzzle" class="starlight-aside__icon" size="1rem" />
    <span><strong>Hint:</strong> {title}</span>
  </summary>
  <div class="starlight-aside__content group-open:block hidden">
    <slot />
  </div>
</details>

<style>
  .starlight-aside--hint {
    --sl-color-asides-text-accent: var(--sl-color-blue-high);
    --sl-color-asides-border: var(--sl-color-blue);
    background-color: var(--sl-color-blue-low);
  }
  
  .starlight-aside--hint .starlight-aside__title {
    color: var(--sl-color-asides-text-accent);
    margin: 0;
  }
  
  .starlight-aside--hint .starlight-aside__content {
    color: var(--sl-color-asides-text-accent);
  }
  
  .starlight-aside--hint details[open] .starlight-aside__content {
    display: block;
  }
</style>