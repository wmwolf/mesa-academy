---
import { Icon } from '@astrojs/starlight/components';

/**
 * Hint component that extends default details behavior with blue/cyan styling.
 * 
 * @prop {string} title - The title text for the hint summary
 */
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details class="group my-6 rounded-lg border-l-4 border-blue-500 dark:border-cyan-400 bg-blue-100 dark:bg-cyan-900/30">
  <summary class="cursor-pointer text-blue-900 dark:text-cyan-100 p-3 font-medium flex items-center gap-2 text-[1.05rem]">
    <Icon name="puzzle" size="1.2em" />
    <span><strong>Hint:</strong> {title}</span>
  </summary>
  <div class="px-3 pb-3 text-[1.05rem] [&>*:last-child]:mb-0">
    <slot />
  </div>
</details>