---
import { Icon } from '@astrojs/starlight/components';

/**
 * Answer component that mimics Starlight's Aside styling with green colors.
 * 
 * @prop {string} title - The title text for the answer summary
 */
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details class="starlight-aside starlight-aside--answer sl-markdown-content my-6 group">
  <summary class="starlight-aside__title cursor-pointer flex items-center gap-2">
    <Icon name="approve-check-circle" class="starlight-aside__icon" size="1rem" />
    <span><strong>Answer:</strong> {title}</span>
  </summary>
  <div class="starlight-aside__content group-open:block hidden">
    <slot />
  </div>
</details>

<style>
  .starlight-aside--answer {
    --sl-color-asides-text-accent: var(--sl-color-green-high);
    --sl-color-asides-border: var(--sl-color-green);
    background-color: var(--sl-color-green-low);
  }
  
  .starlight-aside--answer .starlight-aside__title {
    color: var(--sl-color-asides-text-accent);
    margin: 0;
  }
  
  .starlight-aside--answer .starlight-aside__content {
    color: var(--sl-color-asides-text-accent);
  }
  
  .starlight-aside--answer details[open] .starlight-aside__content {
    display: block;
  }
</style>